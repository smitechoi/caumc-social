{
  "scale": {
    "id": "ces-dc",
    "name": "Depression Scale for Children (CES-DC)",
    "fullName": "Center for Epidemiological Studies Depression Scale for Children",
    "version": "1.0",
    "description": "A self-report scale assessing depressive symptoms in children and adolescents",
    "instruction": "Below is a list of the ways you might have felt or acted. Please indicate how often you have felt this way during the past week.",
    "copyright": "Weissman et al. (1980)",
    "cutoffScore": {
      "clinical": 16,
      "description": "Score of 16 or higher indicates risk for depression"
    },
    "reversedItems": [4, 8, 12, 16]
  },
  "questions": [
    {
      "id": "cesdc_1",
      "number": 1,
      "text": "I was bothered by things that usually don't bother me.",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_2",
      "number": 2,
      "text": "I did not feel like eating; my appetite was poor.",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_3",
      "number": 3,
      "text": "I felt that I could not shake off the blues even with help from my family or friends.",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_4",
      "number": 4,
      "text": "I felt I was just as good as other people.",
      "category": "positive_affect",
      "required": true,
      "reverse": true
    },
    {
      "id": "cesdc_5",
      "number": 5,
      "text": "I had trouble keeping my mind on what I was doing.",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_6",
      "number": 6,
      "text": "I felt depressed.",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_7",
      "number": 7,
      "text": "I felt that everything I did was an effort.",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_8",
      "number": 8,
      "text": "I felt hopeful about the future.",
      "category": "positive_affect",
      "required": true,
      "reverse": true
    },
    {
      "id": "cesdc_9",
      "number": 9,
      "text": "I thought my life had been a failure.",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_10",
      "number": 10,
      "text": "I felt fearful.",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_11",
      "number": 11,
      "text": "My sleep was restless.",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_12",
      "number": 12,
      "text": "I was happy.",
      "category": "positive_affect",
      "required": true,
      "reverse": true
    },
    {
      "id": "cesdc_13",
      "number": 13,
      "text": "I talked less than usual.",
      "category": "interpersonal",
      "required": true
    },
    {
      "id": "cesdc_14",
      "number": 14,
      "text": "I felt lonely.",
      "category": "interpersonal",
      "required": true
    },
    {
      "id": "cesdc_15",
      "number": 15,
      "text": "People were unfriendly.",
      "category": "interpersonal",
      "required": true
    },
    {
      "id": "cesdc_16",
      "number": 16,
      "text": "I enjoyed life.",
      "category": "positive_affect",
      "required": true,
      "reverse": true
    },
    {
      "id": "cesdc_17",
      "number": 17,
      "text": "I had crying spells.",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_18",
      "number": 18,
      "text": "I felt sad.",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_19",
      "number": 19,
      "text": "I felt that people dislike me.",
      "category": "interpersonal",
      "required": true
    },
    {
      "id": "cesdc_20",
      "number": 20,
      "text": "I could not get 'going'.",
      "category": "somatic",
      "required": true
    }
  ],
  "scoring": {
    "type": "sum_with_reverse",
    "ranges": [
      { "min": 0, "max": 15, "level": "normal", "label": "Normal", "description": "Minimal depressive symptoms" },
      { "min": 16, "max": 24, "level": "mild", "label": "Mild Depression", "description": "Mild depressive symptoms" },
      { "min": 25, "max": 60, "level": "severe", "label": "Severe Depression", "description": "Severe depressive symptoms, professional consultation needed" }
    ],
    "factors": {
      "depressed_affect": "Depressed Affect",
      "positive_affect": "Positive Affect",
      "somatic": "Somatic Complaints",
      "interpersonal": "Interpersonal Problems"
    }
  },
  "response_options": [
    { "value": 0, "label": "Rarely or none of the time" },
    { "value": 1, "label": "Some or a little of the time" },
    { "value": 2, "label": "Occasionally or a moderate amount of time" },
    { "value": 3, "label": "Most or all of the time" }
  ]
}
