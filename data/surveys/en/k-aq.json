{
  "scale": {
    "id": "k-aq",
    "name": "Aggression Questionnaire (AQ)",
    "fullName": "Buss-Perry Aggression Questionnaire",
    "version": "1.0",
    "description": "A self-report scale assessing aggression in everyday life",
    "instruction": "Please rate each of the following statements in terms of how characteristic they are of you. Use the following scale for answering these items.",
    "copyright": "Buss & Perry (1992)",
    "cutoffScore": {
      "clinical": 75,
      "description": "Score of 75 or higher indicates high aggression"
    },
    "reversedItems": [15, 24]
  },
  "questions": [
    {
      "id": "kaq_1",
      "number": 1,
      "text": "Once in a while I can't control the urge to strike another person.",
      "category": "physical_aggression",
      "required": true
    },
    {
      "id": "kaq_2",
      "number": 2,
      "text": "I tell my friends openly when I disagree with them.",
      "category": "verbal_aggression",
      "required": true
    },
    {
      "id": "kaq_3",
      "number": 3,
      "text": "I flare up quickly but get over it quickly.",
      "category": "anger",
      "required": true
    },
    {
      "id": "kaq_4",
      "number": 4,
      "text": "I am sometimes eaten up with jealousy.",
      "category": "hostility",
      "required": true
    },
    {
      "id": "kaq_5",
      "number": 5,
      "text": "Given enough provocation, I may hit another person.",
      "category": "physical_aggression",
      "required": true
    },
    {
      "id": "kaq_6",
      "number": 6,
      "text": "I often find myself disagreeing with people.",
      "category": "verbal_aggression",
      "required": true
    },
    {
      "id": "kaq_7",
      "number": 7,
      "text": "When frustrated, I let my irritation show.",
      "category": "anger",
      "required": true
    },
    {
      "id": "kaq_8",
      "number": 8,
      "text": "At times I feel I have gotten a raw deal out of life.",
      "category": "hostility",
      "required": true
    },
    {
      "id": "kaq_9",
      "number": 9,
      "text": "If somebody hits me, I hit back.",
      "category": "physical_aggression",
      "required": true
    },
    {
      "id": "kaq_10",
      "number": 10,
      "text": "When people annoy me, I may tell them what I think of them.",
      "category": "verbal_aggression",
      "required": true
    },
    {
      "id": "kaq_11",
      "number": 11,
      "text": "I sometimes feel like a powder keg ready to explode.",
      "category": "anger",
      "required": true
    },
    {
      "id": "kaq_12",
      "number": 12,
      "text": "Other people always seem to get the breaks.",
      "category": "hostility",
      "required": true
    },
    {
      "id": "kaq_13",
      "number": 13,
      "text": "I get into fights a little more than the average person.",
      "category": "physical_aggression",
      "required": true
    },
    {
      "id": "kaq_14",
      "number": 14,
      "text": "I can't help getting into arguments when people disagree with me.",
      "category": "verbal_aggression",
      "required": true
    },
    {
      "id": "kaq_15",
      "number": 15,
      "text": "I am an even-tempered person.",
      "category": "anger",
      "required": true,
      "reverse": true
    },
    {
      "id": "kaq_16",
      "number": 16,
      "text": "I wonder why sometimes I feel so bitter about things.",
      "category": "hostility",
      "required": true
    },
    {
      "id": "kaq_17",
      "number": 17,
      "text": "If I have to resort to violence to protect my rights, I will.",
      "category": "physical_aggression",
      "required": true
    },
    {
      "id": "kaq_18",
      "number": 18,
      "text": "My friends say that I'm somewhat argumentative.",
      "category": "verbal_aggression",
      "required": true
    },
    {
      "id": "kaq_19",
      "number": 19,
      "text": "I am suspicious of overly friendly strangers.",
      "category": "hostility",
      "required": true
    },
    {
      "id": "kaq_20",
      "number": 20,
      "text": "I know that 'friends' talk about me behind my back.",
      "category": "hostility",
      "required": true
    },
    {
      "id": "kaq_21",
      "number": 21,
      "text": "I have threatened people I know.",
      "category": "physical_aggression",
      "required": true
    },
    {
      "id": "kaq_22",
      "number": 22,
      "text": "I have become so mad that I have broken things.",
      "category": "physical_aggression",
      "required": true
    },
    {
      "id": "kaq_23",
      "number": 23,
      "text": "I am suspicious of overly friendly strangers.",
      "category": "hostility",
      "required": true
    },
    {
      "id": "kaq_24",
      "number": 24,
      "text": "I can think of no good reason for ever hitting a person.",
      "category": "physical_aggression",
      "required": true,
      "reverse": true
    },
    {
      "id": "kaq_25",
      "number": 25,
      "text": "I have trouble controlling my temper.",
      "category": "anger",
      "required": true
    },
    {
      "id": "kaq_26",
      "number": 26,
      "text": "I sometimes feel that people are laughing at me behind my back.",
      "category": "hostility",
      "required": true
    },
    {
      "id": "kaq_27",
      "number": 27,
      "text": "I have threatened people I know.",
      "category": "physical_aggression",
      "required": true
    }
  ],
  "scoring": {
    "type": "sum_with_reverse",
    "ranges": [
      { "min": 27, "max": 54, "level": "low", "label": "Low Aggression", "description": "Below average aggression" },
      { "min": 55, "max": 74, "level": "average", "label": "Average Aggression", "description": "Normal level" },
      { "min": 75, "max": 94, "level": "high", "label": "High Aggression", "description": "Above average aggression" },
      { "min": 95, "max": 135, "level": "very_high", "label": "Very High Aggression", "description": "Professional consultation recommended" }
    ],
    "subscales": {
      "physical_aggression": {
        "name": "Physical Aggression",
        "items": [1, 5, 9, 13, 17, 21, 22, 24, 27],
        "description": "Tendency toward physical violence"
      },
      "verbal_aggression": {
        "name": "Verbal Aggression",
        "items": [2, 6, 10, 14, 18],
        "description": "Tendency toward verbal attacks"
      },
      "anger": {
        "name": "Anger",
        "items": [3, 7, 11, 15, 25],
        "description": "Difficulty controlling anger"
      },
      "hostility": {
        "name": "Hostility",
        "items": [4, 8, 12, 16, 19, 20, 23, 26],
        "description": "Hostile attitude toward others"
      }
    }
  },
  "response_options": [
    { "value": 1, "label": "Extremely uncharacteristic of me" },
    { "value": 2, "label": "Somewhat uncharacteristic of me" },
    { "value": 3, "label": "Neither characteristic nor uncharacteristic of me" },
    { "value": 4, "label": "Somewhat characteristic of me" },
    { "value": 5, "label": "Extremely characteristic of me" }
  ]
