{
  "scale": {
    "id": "k-ars",
    "name": "ADHD Rating Scale",
    "fullName": "ADHD Rating Scale-IV",
    "version": "1.0",
    "description": "A scale for assessing ADHD symptoms",
    "instruction": "Please read each statement below and rate how often it occurs.",
    "copyright": "DuPaul et al. (1998)",
    "cutoffScore": {
      "combined": 19,
      "inattention": 12,
      "hyperactivity": 11,
      "description": "Total score ≥19 or Inattention ≥12 or Hyperactivity-Impulsivity ≥11"
    }
  },
  "questions": [
    {
      "id": "kars_1",
      "number": 1,
      "text": "Fails to give close attention to details or makes careless mistakes in schoolwork, work, or other activities.",
      "category": "inattention",
      "dsm_criteria": "A1a",
      "required": true
    },
    {
      "id": "kars_2",
      "number": 2,
      "text": "Fidgets with hands or feet or squirms in seat.",
      "category": "hyperactivity",
      "dsm_criteria": "A2a",
      "required": true
    },
    {
      "id": "kars_3",
      "number": 3,
      "text": "Has difficulty sustaining attention in tasks or play activities.",
      "category": "inattention",
      "dsm_criteria": "A1b",
      "required": true
    },
    {
      "id": "kars_4",
      "number": 4,
      "text": "Leaves seat in classroom or in other situations in which remaining seated is expected.",
      "category": "hyperactivity",
      "dsm_criteria": "A2b",
      "required": true
    },
    {
      "id": "kars_5",
      "number": 5,
      "text": "Does not seem to listen when spoken to directly.",
      "category": "inattention",
      "dsm_criteria": "A1c",
      "required": true
    },
    {
      "id": "kars_6",
      "number": 6,
      "text": "Runs about or climbs excessively in situations in which it is inappropriate.",
      "category": "hyperactivity",
      "dsm_criteria": "A2c",
      "required": true
    },
    {
      "id": "kars_7",
      "number": 7,
      "text": "Does not follow through on instructions and fails to finish schoolwork, chores, or duties.",
      "category": "inattention",
      "dsm_criteria": "A1d",
      "required": true
    },
    {
      "id": "kars_8",
      "number": 8,
      "text": "Has difficulty playing or engaging in leisure activities quietly.",
      "category": "hyperactivity",
      "dsm_criteria": "A2d",
      "required": true
    },
    {
      "id": "kars_9",
      "number": 9,
      "text": "Has difficulty organizing tasks and activities.",
      "category": "inattention",
      "dsm_criteria": "A1e",
      "required": true
    },
    {
      "id": "kars_10",
      "number": 10,
      "text": "Is 'on the go' or acts as if 'driven by a motor'.",
      "category": "hyperactivity",
      "dsm_criteria": "A2e",
      "required": true
    },
    {
      "id": "kars_11",
      "number": 11,
      "text": "Avoids, dislikes, or is reluctant to engage in tasks that require sustained mental effort.",
      "category": "inattention",
      "dsm_criteria": "A1f",
      "required": true
    },
    {
      "id": "kars_12",
      "number": 12,
      "text": "Talks excessively.",
      "category": "hyperactivity",
      "dsm_criteria": "A2f",
      "required": true
    },
    {
      "id": "kars_13",
      "number": 13,
      "text": "Loses things necessary for tasks or activities.",
      "category": "inattention",
      "dsm_criteria": "A1g",
      "required": true
    },
    {
      "id": "kars_14",
      "number": 14,
      "text": "Blurts out answers before questions have been completed.",
      "category": "impulsivity",
      "dsm_criteria": "A2g",
      "required": true
    },
    {
      "id": "kars_15",
      "number": 15,
      "text": "Is easily distracted by extraneous stimuli.",
      "category": "inattention",
      "dsm_criteria": "A1h",
      "required": true
    },
    {
      "id": "kars_16",
      "number": 16,
      "text": "Has difficulty awaiting turn.",
      "category": "impulsivity",
      "dsm_criteria": "A2h",
      "required": true
    },
    {
      "id": "kars_17",
      "number": 17,
      "text": "Is forgetful in daily activities.",
      "category": "inattention",
      "dsm_criteria": "A1i",
      "required": true
    },
    {
      "id": "kars_18",
      "number": 18,
      "text": "Interrupts or intrudes on others.",
      "category": "impulsivity",
      "dsm_criteria": "A2i",
      "required": true
    }
  ],
  "scoring": {
    "type": "sum",
    "ranges": [
      { "min": 0, "max": 18, "level": "normal", "label": "Normal", "description": "Low likelihood of ADHD" },
      { "min": 19, "max": 28, "level": "mild", "label": "Mild", "description": "Possible ADHD, further evaluation needed" },
      { "min": 29, "max": 41, "level": "moderate", "label": "Moderate", "description": "Likely ADHD" },
      { "min": 42, "max": 54, "level": "severe", "label": "Severe", "description": "Severe ADHD symptoms" }
    ],
    "subscales": {
      "inattention": {
        "name": "Inattention",
        "items": [1, 3, 5, 7, 9, 11, 13, 15, 17],
        "cutoff": 12
      },
      "hyperactivity_impulsivity": {
        "name": "Hyperactivity-Impulsivity",
        "items": [2, 4, 6, 8, 10, 12, 14, 16, 18],
        "cutoff": 11
      }
    }
  },
  "response_options": [
    { "value": 0, "label": "Never or rarely" },
    { "value": 1, "label": "Sometimes" },
    { "value": 2, "label": "Often" },
    { "value": 3, "label": "Very often" }
  ]
}