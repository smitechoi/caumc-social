      "hyperactivity_impulsivity": {
        "name": "多动-冲动",
        "items": [2, 4, 6, 8, 10, 12, 14, 16, 18],
        "cutoff": 11
      }
    }
  },
  "response_options": [
    { "value": 0, "label": "从不" },
    { "value": 1, "label": "偶尔" },
