{
  "scale": {
    "id": "ces-dc",
    "name": "児童うつ病評価尺度 (CES-DC)",
    "fullName": "Center for Epidemiological Studies Depression Scale for Children",
    "version": "1.0",
    "description": "児童・青少年のうつ症状を評価する自己記入式検査です",
    "instruction": "以下の項目について、どのくらいの頻度で経験したか該当する項目に印をつけてください。",
    "copyright": "Weissman et al. (1980), Japanese version",
    "cutoffScore": {
      "clinical": 16,
      "description": "16点以上でうつ病リスク群"
    },
    "reversedItems": [4, 8, 12, 16]
  },
  "questions": [
    {
      "id": "cesdc_1",
      "number": 1,
      "text": "普段は何でもないことが面倒に感じられた。",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_2",
      "number": 2,
      "text": "食べたくなかった。お腹がすかなかった。",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_3",
      "number": 3,
      "text": "家族や友達が私の気分を良くしようと努力しても楽しくなかった。",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_4",
      "number": 4,
      "text": "私も他の子どもたちと同じくらい良い人間だと感じた。",
      "category": "positive_affect",
      "required": true,
      "reverse": true
    },
    {
      "id": "cesdc_5",
      "number": 5,
      "text": "していることに集中するのが難しかった。",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_6",
      "number": 6,
      "text": "気分が沈んで幸せではなかった。",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_7",
      "number": 7,
      "text": "何かをするのにとても疲れていると感じた。",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_8",
      "number": 8,
      "text": "良いことが起こるような気がした。",
      "category": "positive_affect",
      "required": true,
      "reverse": true
    },
    {
      "id": "cesdc_9",
      "number": 9,
      "text": "以前やったことがうまくいかないと感じた。",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_10",
      "number": 10,
      "text": "怖いと感じた。",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_11",
      "number": 11,
      "text": "いつもより眠れなかった。",
      "category": "somatic",
      "required": true
    },
    {
      "id": "cesdc_12",
      "number": 12,
      "text": "幸せだった。",
      "category": "positive_affect",
      "required": true,
      "reverse": true
    },
    {
      "id": "cesdc_13",
      "number": 13,
      "text": "いつもより静かだった。",
      "category": "interpersonal",
      "required": true
    },
    {
      "id": "cesdc_14",
      "number": 14,
      "text": "友達がいないように寂しく感じた。",
      "category": "interpersonal",
      "required": true
    },
    {
      "id": "cesdc_15",
      "number": 15,
      "text": "知っている子どもたちが親しくない、または私と一緒にいたくないように感じた。",
      "category": "interpersonal",
      "required": true
    },
    {
      "id": "cesdc_16",
      "number": 16,
      "text": "楽しかった。",
      "category": "positive_affect",
      "required": true,
      "reverse": true
    },
    {
      "id": "cesdc_17",
      "number": 17,
      "text": "泣きたい気持ちだった。",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_18",
      "number": 18,
      "text": "悲しかった。",
      "category": "depressed_affect",
      "required": true
    },
    {
      "id": "cesdc_19",
      "number": 19,
      "text": "人々が私を好きではないように感じた。",
      "category": "interpersonal",
      "required": true
    },
    {
      "id": "cesdc_20",
      "number": 20,
      "text": "何かを始めるのが難しかった。",
      "category": "somatic",
      "required": true
    }
  ],
  "scoring": {
    "type": "sum_with_reverse",
    "ranges": [
      { "min": 0, "max": 15, "level": "normal", "label": "正常", "description": "うつ症状がほとんどない" },
      { "min": 16, "max": 24, "level": "mild", "label": "軽度うつ", "description": "軽いうつ症状" },
      { "min": 25, "max": 60, "level": "severe", "label": "重度うつ", "description": "深刻なうつ症状、専門家の相談が必要" }
    ],
    "factors": {
      "depressed_affect": "抑うつ感情",
      "positive_affect": "肯定的感情",
      "somatic": "身体化症状",
      "interpersonal": "対人関係の問題"
    }
  },
  "response_options": [
    { "value": 0, "label": "ほとんどない" },
    { "value": 1, "label": "ときどき" },
    { "value": 2, "label": "よくある" },
    { "value": 3, "label": "ほとんどいつも" }
  ]
}