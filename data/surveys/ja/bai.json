  "questions": [
    {
      "id": "bai_1",
      "number": 1,
      "text": "体がしびれたり、うずいたり、感覚が麻痺した感じがする。",
      "category": "neurophysiological",
      "required": true
    },
    {
      "id": "bai_2",
      "number": 2,
      "text": "興奮した感じがする。",
      "category": "subjective",
      "required": true
    },
    {
      "id": "bai_3",
      "number": 3,
      "text": "足が震えることがある。",
      "category": "neurophysiological",
      "required": true
    },
    {
      "id": "bai_4",
      "number": 4,
      "text": "ゆったりと休むことができない。",
      "category": "subjective",
      "required": true
    },
    {
      "id": "bai_5",
      "number": 5,
      "text": "とても悪いことが起こりそうな恐怖を感じる。",
      "category": "subjective",
      "required": true
    },
    {
      "id": "bai_6",
      "number": 6,
      "text": "めまい（立ちくらみ）を感じる。",
      "category": "neurophysiological",
      "required": true
    },
    {
      "id": "bai_7",
      "number": 7,
      "text": "心臓がドキドキして速く打つことがある。",
      "category": "autonomic",
      "required": true
    },
    {
      "id": "bai_8",
      "number": 8,
      "text": "落ち着かない。",
      "category": "subjective",
      "required": true
    },
    {
      "id": "bai_9",
      "number": 9,
      "text": "よく怖くなったり、恐怖を感じたりする。",
      "category": "panic",
      "required": true
    },
    {
      "id": "bai_10",
      "number": 10,
      "text": "神経が過敏な状態だ。",
      "category": "subjective",
      "required": true
    },
    {
      "id": "bai_11",
      "number": 11,
      "text": "息が詰まって窒息しそうになることがある。",
      "category": "autonomic",
      "required": true
    },
    {
      "id": "bai_12",
      "number": 12,
      "text": "手がよく震える。",
      "category": "neurophysiological",
      "required": true
    },
    {
      "id": "bai_13",
      "number": 13,
      "text": "そわそわして落ち着かない。",
      "category": "neurophysiological",
      "required": true
    },
    {
      "id": "bai_14",
      "number": 14,
      "text": "気が狂いそうな恐怖を感じる。",
      "category": "panic",
      "required": true
    },
    {
      "id": "bai_15",
      "number": 15,
      "text": "息をするのが困難な時がある。",
      "category": "autonomic",
      "required": true
    },
    {
      "id": "bai_16",
      "number": 16,
      "text": "死にそうな恐怖を感じる。",
      "category": "panic",
      "required": true
    },
    {
      "id": "bai_17",
      "number": 17,
      "text": "不安な状態にある。",
      "category": "subjective",
      "required": true
    },
    {
      "id": "bai_18",
      "number": 18,
      "text": "よく消化不良でお腹が不快だ。",
      "category": "autonomic",
      "required": true
    },
    {
      "id": "bai_19",
      "number": 19,
      "text": "気を失いそうになることがある。",
      "category": "neurophysiological",
      "required": true
    },
    {
      "id": "bai_20",
      "number": 20,
      "text": "顔がよく赤くなる。",
      "category": "autonomic",
      "required": true
    },
    {
      "id": "bai_21",
      "number": 21,
      "text": "汗をたくさんかく（暑さによるものは除く）。",
      "category": "autonomic",
      "required": true
    }
  ],
  "scoring": {
    "type": "sum",
    "ranges": [
      { "min": 0, "max": 9, "level": "minimal", "label": "正常", "description": "不安が正常レベル" },
      { "min": 10, "max": 18, "level": "mild", "label": "軽い不安", "description": "軽微な不安症状" },
      { "min": 19, "max": 29, "level": "moderate", "label": "中等度の不安", "description": "治療を検討すべきレベル" },
      { "min": 30, "max": 63, "level": "severe", "label": "重い不安", "description": "即座の治療が必要" }
    ],
    "factors": {
      "neurophysiological": "神経生理学的",
      "subjective": "主観的",
      "panic": "パニック関連",
      "autonomic": "自律神経系"
    }
  },
  "response_options": [
    { "value": 0, "label": "全く感じなかった" },
    { "value": 1, "label": "少し感じた" },
    { "value": 2, "label": "かなり感じた" },
    { "value": 3, "label": "ひどく感じた" }
  ]
